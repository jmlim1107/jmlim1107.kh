<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
  <!-- 은아) 상의 후 client-setting.xml로 이동하겠습니다. -->
<tiles-definitions>
	<definition name="home" template="/WEB-INF/views/template/client/clientLayout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/template/homeHeader.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/template/homeBody.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/template/homeFooter.jsp" />
	</definition>
	
	<definition name="basicTemplate" template="/WEB-INF/views/template/client/clientLayout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/template/homeHeader.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/template/homeFooter.jsp" />
	</definition>
	
	<definition name="class/*" extends="basicTemplate">
		<put-attribute name="body" value="/WEB-INF/views/client/class/{1}.jsp" />
	</definition>
	
	<definition name="userContent" template="/WEB-INF/views/template/client/clientLayout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/template/eunaheader.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/template/homeFooter.jsp" />
	</definition>
	
	<definition name="liuser/login/*" extends="userContent">
		<put-attribute name="body" value="/WEB-INF/views/client/login/{1}.jsp" />
	</definition>
	
	<definition name="liuser/mypage/*" extends="userContent">
		<put-attribute name="body" value="/WEB-INF/views/client/mypage/{1}.jsp" />
	</definition>
	
	

	<definition name="client/qnaboard/*" extends="userContent">
		<put-attribute name="title" value="고객센터" />
		<put-attribute name="body" value="/WEB-INF/views/client/qnaboard/{1}.jsp" />
	</definition>
	
	<definition name="client/studio/*" extends="userContent">
		<put-attribute name="title" value="스튜디오" />
 		<put-attribute name="body" value="/WEB-INF/views/client/studio/{1}.jsp" />
	</definition>
	
	<definition name="common/*/*" extends="userContent">
		<put-attribute name="body" value="/WEB-INF/views/common/{1}/{2}.jsp" />
	</definition>

	
</tiles-definitions>