		<!-- login,카카오,네이버,modal  -->
		<script type="text/javascript">
			$(function(){ 
				
				/* login modal */
				$("#login-modal").click(function(){
				       $("#login-pop-modal").attr("style", "display:block");
				   });
				  
				    $("#modal_close_btn").click(function(){
				       $("#login-pop-modal").attr("style", "display:none");
				 });
			     
			    /* login */
				$("#login").click(function(){
					if(!chkData("#user_email","이메일을 ")) return;
					else if (!chkData("#user_pw","비밀번호를 ")) return;
					else {
						$.ajax({
							url : "/user/checkIdPw",
							type : "post",
							data : $("#login-form").serialize(),
							dataType : "text",
							error : function(){
								console.log("ajax error");
							},
							success : function(checkData) {
								if (checkData == 0) {
									alert("Check your ID/password");
								} else if (checkData == 1) {
									$("#login-form").attr({
										"method":"post",
										"action": "/user/login"
									});
									$("#login-form").submit();
								}else{
									alert("system error");
								}
							}
						});
					}
				});
			    
			});
			
			
			 $(document).ready(function(){
				/*kakao*/
			 	Kakao.init('93dabf793b8403bbf540b6d314c75a8f');
		        Kakao.isInitialized();
		        
		        let errorMsg = "${errorMsg}";
				if(errorMsg !=""){
					alert(errorMsg);
					console.log(errorMsg);
					errorMsg="";
				}
			
		    });
			
		 	function loginWithKakao() {
		        Kakao.Auth.authorize({ 
		        redirectUri: 'http://127.0.0.1:8080/user/kakaoLogin' 
		        }); 
		    }
		 	
		 	function loginWithNaver() {
		 	    $.ajax({
		 	        url: '/user/getNaverAuthUrl',
		 	        type: 'get',
		 	    }).done(function (res) {
		 	        location.href = res;
		 	    });
		 	}
		 	
	</script>

